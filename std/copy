(/rl/)

::std [T: TYPE] copy_assign(
	dst: T! \,
	src: T!# \,
	count: size_t) VOID
{
	FOR(i ::= 0; i<count; i++)
		dst[i] := src[i];
}

::std [T: TYPE] copy_construct(
	dst: T! \,
	src: T!# \,
	count: size_t) VOID
{
	FOR(i ::= 0; i<count; i++)
		__rl::placement_new(&dst[i], src[i]);
}

::std [T: TYPE] move_construct(
	dst: T! \,
	src: T! \,
	count: size_t) VOID
{
	FOR(i ::= 0; i<count; i++)
		__rl::placement_new(&dst[i], ::__cpp_std::move(src[i]));
}