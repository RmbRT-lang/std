(/rl/)

INCLUDE 'std/error'
INCLUDE 'std/err/indexoutofrange'

::std Index
{
	Checked: BOOL;
	I: UM;

	{};

	{i: UM} --:
		I := i;

	:ok {i: UM} --:
		Checked := TRUE,
		I := i;

	# THIS(range: UM) UM --
	{
		IF(Checked || I < range)
			= I;
		THROW <err::IndexOutOfRange>(range, I);
	}


	# THIS[range: UM] UM --
	{
		IF(Checked || I <= range)
			= I;
		THROW <err::IndexOutOfRange>(range+1, I);
	}
}