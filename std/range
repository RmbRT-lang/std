(/rl/)

INCLUDE 'std/types'

::std::range
{
	[T: TYPE] copy_assign(
		dst: T! \,
		src: T!# \,
		count: Size) VOID
	{
		FOR(i ::= 0; i<count; i++)
			dst[i] := src[i];
	}

	[T: TYPE] copy_construct(
		dst: T! \,
		src: T!# \,
		count: Size) VOID
	{
		FOR(i ::= 0; i<count; i++)
			__rl::placement_new(&dst[i], src[i]);
	}

	[T: TYPE] move_construct(
		dst: T! \,
		src: T! \,
		count: Size) VOID
	{
		FOR(i ::= 0; i<count; i++)
			__rl::placement_new(&dst[i], ::__cpp_std::move(src[i]));
	}
}